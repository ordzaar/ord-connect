{
  "name": "@ordzaar/ord-connect",
  "version": "0.0.0",
  "description": "React component library for Bitcoin Ordinals and Sado Protocol Connections",
  "repository": "https://github.com/ordzaar/ord-connect",
  "bugs": "https://github.com/ordzaar/ord-connect/issues",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/*",
    "index.d.ts"
  ],
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-node-polyfills": "^0.16.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@ordzaar/ordit-sdk": "1.0.4",
    "bitcoinjs-lib": "6.1.5",
    "boring-avatars": "^1.10.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "@ordzaar/ordit-sdk": "1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
