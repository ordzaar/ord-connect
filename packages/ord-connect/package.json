{
  "name": "@ordzaar/ord-connect",
  "version": "0.0.0",
  "description": "React component library for Bitcoin Ordinals and Sado Protocol Connections",
  "repository": "https://github.com/ordzaar/ord-connect",
  "bugs": "https://github.com/ordzaar/ord-connect/issues",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/*",
    "index.d.ts"
  ],
  "types": "./index.d.ts",
  "main": "./dist/ord-connect.umd.cjs",
  "module": "./dist/ord-connect.js",
  "exports": {
    ".": {
      "import": "./dist/ord-connect.js",
      "require": "./dist/ord-connect.umd.cjs"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "@sadoprotocol/ordit-sdk": "2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sats-connect": "^1.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-node-polyfills": "^0.16.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@sadoprotocol/ordit-sdk": "2.3.1",
    "bitcoinjs-lib": "6.1.3",
    "boring-avatars": "^1.10.1",
    "sats-connect": "^1.1.1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
